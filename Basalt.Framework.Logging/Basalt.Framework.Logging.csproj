<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <Title>Basalt Logging Framework</Title>
    <Authors>Damocles</Authors>
    <Description>A logging framework for basalt applications</Description>
    <Version>1.0.0</Version>

    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <RepositoryUrl>https://github.com/BrandenEK/Basalt.Framework.Logging</RepositoryUrl>
    
    <OutputType>Exe</OutputType>
  </PropertyGroup>

</Project>
